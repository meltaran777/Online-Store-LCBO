<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shopping_cart_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/product_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:src="@drawable/ic_phone" />

    <ImageView
        android:id="@+id/menu_image_view"
        android:layout_width="25dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_popup_menu" />

    <TextView
        android:id="@+id/product_name_text_view"
        style="@style/MyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:maxWidth="100dp"
        android:textSize="10sp"
        android:textStyle="bold"
        tools:text="product name here cant be very long and" />

    <TextView
        android:id="@+id/price_text_view"
        style="@style/MyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:padding="4dp"
        android:text="22 569 $"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/plus_image_view"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_plus" />

        <android.support.v4.widget.Space
            android:layout_width="4dp"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/item_count_text_view"
            style="@style/MyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp" />

        <android.support.v4.widget.Space
            android:layout_width="4dp"
            android:layout_height="1dp" />

        <ImageView
            android:id="@+id/minus_image_view"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_minus" />

    </LinearLayout>

</android.support.v7.widget.CardView>