<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="AppTheme.AppBarOverlay">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="PopupOverlay" parent="AppTheme">
        <item name="android:textColorSecondary">#fff</item>
    </style>

    <style name="MyTextView" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar.MinWidth" >
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
